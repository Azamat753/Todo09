<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_bg_corner"
    android:elevation="8dp"
    android:orientation="vertical"
    android:paddingHorizontal="51dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    tools:context=".ui.CreateTaskDialog">
    <ImageView
        android:id="@+id/imageVieww"
        android:src="@color/black"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/taskEd"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_bg"
        android:hint="task" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/dateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_bg"
            android:drawableEnd="@drawable/ic_date"
            android:paddingEnd="4dp"
            android:text="10.20.03" />

        <Button
            android:id="@+id/regularBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/rectangle_bg"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:paddingEnd="4dp"
            android:text="Каждый день" />
    </LinearLayout>

    <Button
        android:id="@+id/applyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:background="@drawable/rectangle_bg_solid"
        android:text="Принять"
        android:textColor="@color/white" />

</LinearLayout>